<style>
  section {
    background-image: url(assets/battle-background1.jpg);
    background-size: cover;
    background-position:center;
    width: 100%;
    min-height: 120vh;
}

h3 {
    color:rgb(139, 19, 19);
}

.pokemon-card {
    background-color: rgba(255, 255, 255, 0.85);
    border-radius: 10px;
    border-bottom: 5px rgb(139, 19, 19) solid;
}

.other-card {
    background-color: rgba(255, 255, 255, 0.85);
    border-radius: 10px;
  }

.evil-card {
    background-color: rgba(253, 7, 7, 0.85);
    border-radius: 10px;
  }

.dark-card {
    background-color: rgba(0, 0, 0, 0.85);
    border-radius: 10px;
  }

.row .col.s3 {
    width: 30%;
    margin-left: 8px;
    left: auto;
    right: auto;
}

.btn-large {
    height: 54px;
    line-height: 54px;
    font-size: 25px;
    padding: 0 100px;
    margin-left: 250px;
    transform: translateY(-200px);
}

.btn {
    text-decoration: none;
    color: #fff;
    background-color: rgb(139, 19, 19);
    /* text-align: left; */
    letter-spacing: .5px;
    -webkit-transition: background-color .2s ease-out;
    transition: background-color .2s ease-out;
    cursor: pointer;
    transform: translateY(x);
    margin-top: 10px;
    margin-bottom: 10px;
}
</style>

<section class="row">
    <div class="col s12">
        <br>
        <br>
        <div class="col s3 other-card center z-depth-5">
            <div class="">
                <h3 class="card-title ">My Party</h3>
            </div>
                {{#each pokemons}}
                {{#with this.trainer_pokemon}}
                {{#with this.is_in_party}}
                {{!-- BE CAREFUL WITH THE CSS --}}
                {{!-- Battle.js relies on the ordering of the 'my-pokemon' and the 'battle-pokemon' classes --}}
        
        <div class="pokemon-card col s6  my-pokemon-div">
            <img class="my-pokemon" src="{{../../sprite}}" name="{{../../id}}">
            <h6 class="party-name pkn-type-black my-pokemon">{{capitalize ../../name}}</h6>
            {{#if ../../type_two}}  
                <p class="col s6 center pkn-type {{../../type_one}}-battle my-pokemon">{{capitalize ../../type_one}}</p>
                <p class="col s6 center pkn-type {{../../type_two}}-battle my-pokemon">{{capitalize ../../type_two}}</p>
            {{else}}
                <p class="center pkn-type {{../../type_one}}-battle my-pokemon">{{capitalize ../../type_one}}</p>
            {{/if}}
        </div>
        {{/with}}
        {{/with}}
        {{/each}}
        <a class="waves-effect waves-light btn" href="/dashboard">Go back!</a>
        <br>
        </div>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            {{!-- <br>
            <br>
            <br> --}}
            {{!-- Your battling Pokemon --}}
        <div id="battle-pokemon-div" class="col s3 other-card center z-depth-5">
            <h4>Your Pokemon</h4>
            <img id="battle-pokemon-img" class="pokemon-card battle-pokemon" width="150" height="150" src="assets/placeholder.png">
            <div class="dark-card">
                <h4 id="battle-pokemon-name" class="white-text battle-pokemon"></h4>
                <p id="battle-pokemon-type-one" class="center battle-pokemon"> </p>
                <p id="battle-pokemon-type-two" class="center battle-pokemon"></p>
            </div>
        </div>
        {{!-- VS Card --}}
        <div class="col s1">
            <br>
            <br>
            <h1 class="other-card red-text z-depth-5">VS</h1>
        </div>
        {{!-- Wild Pokemon data --}}
        {{#if random_wild_pokemon}}
        <div id="wild-pokemon" class="col s3 evil-card center z-depth-5 wild-pokemon" data-id="{{random_wild_pokemon.id}}">
            <h4>Wild Pokemon</h4>
            <img class="pokemon-card" width="150" height="150" src="{{random_wild_pokemon.sprite}}">
            <div class="dark-card">
                <h3 class="white-text">{{capitalize random_wild_pokemon.name}}</h3>
                {{#if random_wild_pokemon.type_two}}
                <p class="center pkn-type {{random_wild_pokemon.type_one}}"></p>
                <p class="center pkn-type {{random_wild_pokemon.type_two}}"></p>
                {{else}}
                <p class="center pkn-type {{random_wild_pokemon.type_one}}"></p>
                {{/if}}
            </div>
        </div>
        {{!-- Battle Button --}}
        <div class="col s9 center">
            <br>
            <button id="battle" class="btn-large red white-text z-depth-5"><i class="material-icons right">videogame_asset</i>FIGHT </button>
        </div>
        {{else}}
        {{!-- If they have no pokemon left to fight --}}
            <h4>You have caught them all!</h4>
            <button class="btn-large black"><a class="white-text" href="/dashboard">Return to Dashboard</a></button>

        {{/if}}


    </div>
</section>

<script src="/js/battle.js"></script>
