<style>
  .background-img-dashboard {
    background-image: url(assets/pokeball_background.jpg);
    background-size: cover;
    background-position:center;
    width: 100%;
    min-height: 100vh;
  }

  .card {
    background-color: rgba(255, 255, 255, 0.85);
    border-radius: 10px;
    border-bottom: 3px rgb(139, 19, 19) solid;
    }
  .card-title a {
    font-size: 50px;
    font-weight: bold;
    }

  .card .card-title {
    font-size: 35px;
    font-weight: 600;
    }
  
  .card-content {
    padding: 20px;
    }

  .card-title {
    color: #8b1313;
    text-align: center;
    margin-top: 0;
    padding-top: 10px;
  }

  .card .card-image img {
    height: auto; 
    width: 100%;
    position: relative;
    top: 10px;
  }

  .row .col.m6 {
    margin-top: 4%;
    width: 50%;
    margin-left: 235px;
    left: auto;
    right: auto;
  }
</style>


{{!-- Trainer's main dashboard --}}
<section class="background-img-dashboard">
  <div class="container row">
    <div class= "row center">
      {{#if pokemons.length}}
      <div class="col s12 m6">
        <div class="card">
          <h3 class="card-title">{{username}}'s Party</h3>
          <hr class="hr">
          <div class="card-content">
            <p class="p-dashboard"><a class= "edit-a" href="/trainersPokedex">My Pokedex / Edit Party</a></p>
            <div class="row col s12">
              {{#each pokemons}}
              {{#with this.trainer_pokemon}}
              {{#with this.is_in_party}}
              <div class="col s4">
                <div class="card">
                  <div class="card-image">
                    <img src="{{../../sprite}}">
                  </div>
                </div>
              </div>
              {{/with}}
              {{/with}}
              {{/each}}
            </div>
            <div>
              <p class="p-dashboard">Your highest score is: {{total_score}} points</p>
            </div>
          </div>
          {{else}}
          <div class="card-content">
              <div class="row col s12">
                <div class="card">
                  <h2 class="center title red-text">{{username}}!</h2>
                  <h2 class="center title">Select your starter to begin your adventure</h2>
                </div>
                <div>
                  <div class="card col s3 offset-s1">
                    <div class="card-image">
                      <img class="img-pokemon" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/1.png">
                    </div>
                    <div>
                      <p class="p-dashboard">Bulbasaur</p>
                      <p class="pkn-type grass"></p>
                      <p class="pkn-type poison"></p>
                    </div>
                    <div class="center dashboard-bot-padding">
                      <button class="waves-effect waves-light btn-small green starter-pokemon" data-id="{{id}}" data-pokemon-id="1">Pick this pokemon?</button>
                    </div>
                  </div>
                  <div class="card col s3 offset-s1 ">
                    <div class="card-image">
                      <img class="img-pokemon" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/4.png">
                    </div>
                    <div>
                      <p class="p-dashboard">Charmander</p>
                      <p class="pkn-type fire"></p>
                      <p class="pkn-type-empty empty"></p>
                    </div>
                    <div class="center dashboard-bot-padding">
                      <button class="waves-effect waves-light btn-small orange starter-pokemon"data-id="{{id}}" data-pokemon-id="4">Pick this pokemon?</button>
                    </div>
                  </div>
                  <div class="card col s3 offset-s1" >
                    <div class="card-image">
                      <img class="img-pokemon" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/7.png">
                    </div>
                    <div>
                      <p class="p-dashboard">Squirtle</p>
                      <p class="pkn-type water"></p><p class="pkn-type-empty empty"></p>
                    </div>
                    <div class="center dashboard-bot-padding">
                      <button class="waves-effect waves-light btn-small blue starter-pokemon" data-id="{{id}}" data-pokemon-id="7">Pick this pokemon?</button>
                    </div>
                  </div>
                </div>
              </div>
          </div>
          {{/if}}
        </div>
      </div>
      {{#if pokemons.length}}
      <div class="col s12">
        <div class="card-content">
          <button class="waves-effect waves-light btn-large red"><i class="material-icons right">gamepad</i><a class="white-text" href="/battle">Battle a wild Pokemon</a></button>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</section>

<script src="/js/dashboard.js"></script>

