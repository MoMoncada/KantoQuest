<div class= "row">
{{#if pokemons.length}}
      
        <div class="col s12 valign-wrapper">
          <div class="card rounded w-50">
            <div class="card-content">
              <button class="waves-effect waves-light btn-large red"><i class="material-icons right">gamepad</i><a href="/battle">Battle a wild Pokemon</a></button>
            </div>
          </div>
        </div>
     
{{/if}}
    </div>
  </div>
  </section>


