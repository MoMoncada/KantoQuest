<style>
  .background-img-homepage {
    background-image: url(assets/homepage_bg.png);
    background-size: cover;
    background-position:center;
    width: 100%;
    min-height: 150vh;
}
</style>

{{!-- Homepage handlebars --}}
<section class="background-img-homepage">
  <div class="row">
    <div class="col s12 m8">
      <h5 class="left white-text title-card-homepage">
        <img src="https://www.freeiconspng.com/uploads/file-pokeball-png-0.png" width="40" alt="Pokeball"/> Battle Pokemon and complete your Pokedex
        <br><img src="https://www.freeiconspng.com/uploads/pokemon-pikachu-png-2.png" width="40" alt="Pikachu" /> Test your Type match up knowledge
        <br><img src="/assets/pokemon-icicle-badge.png" width="40" alt="Badge"> Try to catch 'em all and join the Hall of Fame</h5>
    </div>
    <div class="col s12 m8 l6">
      {{#if trainers.length}}
      <div class="col s11 offset-s1 hall-of-fame">
        <h2 class="center text-shadow text-blue-bold"><img src="/assets/pokemon-icicle-badge.png" width="40" alt="Badge"> Hall of Fame! <img src="/assets/pokemon-thunder-badge.png" width="40" alt="Badge"></h2>
      </div>
      <div>
        <div class="col s11 offset-s1 hall-of-fame">
          {{#each trainers as |trainer|}}
            <div class="row s4">
              <ol class="trainer collection-item">
                <li><h4 class="white-text header left">{{username}} - {{total_score}} points! </h4></li>
              </ol>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
   {{/if}}