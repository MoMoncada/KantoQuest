{{#if is_caught }}

{{!-- If pokemon is caught render normally --}}
<li class="card-panel row pokemon center">
<button class="waves-effect waves-light btn left add-pokemon" data-id="{{trainers_id}}" data-pokemon-id="{{id}}">+</button>

  <p class="col s2 left">#{{id}}</p>
  <img class ="col s1" width="50px" height="50px" src="{{sprite}}" />
  <h5 class="center col s3">{{capitalize name}}</h5>
  <div class="row col s4">
    {{! // if pokemon has 2 types }}
    {{#if type_two}}
      <p class="col s6 center pkn-type {{type_one}}"></p>
      <p class="col s6 center pkn-type {{type_two}}"></p>
    {{else}}
      <p class="center col s6 pkn-type {{type_one}}"></p>

    {{/if}}
  </div>
 </li>

{{else}}

{{!-- if not caught render hidden --}}
<li class="card-panel row pokemon center">

 <p class="col s2 left">#{{id}}</p>
  <img class ="col s1 darken" width="50px" height="50px" src="{{sprite}}" />
  <h5 class="center col s3">???</h5>
  
<div class="row col s4">
  </div>
</li>

{{/if}}

