<div class="card-panel row pokemon center">
<button class="waves-effect waves-light btn left add-pokemon" data-id="{{trainer_pokemon.trainer_id}}" data-pokemon-id="{{id}}">+</button>

  <p class="col s2 left">#{{id}}</p>
  <img class ="col s1" width="50px" height="50px" src="{{sprite}}" />
  <h5 class="center col s3">{{capitalize name}}</h5>
  <div class="row col s4">
    {{! // if pokemon has 2 types }}
    {{#if type_two}}
      <p class="col s6 center pkn-type {{type_one}}"></p>
      <p class="col s6 center pkn-type {{type_two}}"></p>
    {{else}}
      <p class="center col s6 pkn-type {{type_one}}"></p>

    {{/if}}
  </div>
</div>